<h1><%= @header_msg %></h1>

<ul>
  <% @employee.errors.full_messages.each do |error| %>
    <li style="color: red;"><%= error %></li>
  <% end %>
</ul>

<%= form_for(@employee) do |f| %>

  First name<br><%= f.text_field :first_name %><br><br>
  Last name<br><%= f.text_field :last_name %><br><br>
  Alias<br><%= f.text_field :alias %><br><br>
  Title<br><%= f.text_field :title %><br><br>
  Office<br><%= f.text_field :office %><br><br>
  Image URL<br><%= f.text_field :img_url %><br><br>

  Dog<br><%= f.collection_select :dog_id, Dog.all, :id, :name %><br><br>

  <%= f.submit @button_msg%>
<% end %>